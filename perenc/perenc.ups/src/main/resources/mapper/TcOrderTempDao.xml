<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.perenc.xh.lsp.dao.tcOrder.TcOrderTempDao"> <!-- 指定DAO -->

	<!-- ******** 增删改查 start ******** -->
	<!-- 通用分页查询 -->
	<select id="list" resultType="com.perenc.xh.lsp.entity.tcOrder.TcOrderTemp">
		select t.*
		from `tc_order_temp` t
		where 1=1
		<include refid="common.where"></include>
	</select>

	<!-- 查询数量 -->
	<select id="count" resultType="int">
		select count(*)
		from `tc_order_temp` t
		where 1=1
		<include refid="common.where"></include>
	</select>

	<!-- 通过id查询 -->
	<select id="getById" resultType="com.perenc.xh.lsp.entity.tcOrder.TcOrderTemp">
		select t.*
		from `tc_order_temp` t
		where t.id = #{0}
	</select>

	<!-- 查询单条记录 -->
	<select id="getOne" resultType="com.perenc.xh.lsp.entity.tcOrder.TcOrderTemp">
		select t.*
		from `tc_order_temp` t
		where 1=1
		<include refid="common.where"></include>
		<if test="order != null">
			order by ${order}
		</if>
		limit 0,1
	</select>

	<!-- 删除 -->
	<delete id="delete">
		delete from `tc_order_temp`
		where id in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
			#{item}
		</foreach>
	</delete>

	<!-- 新增 -->
	<insert id="add" useGeneratedKeys="true" keyProperty="id">
		insert into `tc_order_temp` <include refid="common.insert"></include>
	</insert>

	<!-- 修改 -->
	<update id="update">
		update `tc_order_temp` set <include refid="common.update"></include>
	</update>

    <!--批量修改状态-->
	<update id="deleteBatch">
		UPDATE tc_order_temp SET `STATUS`=2 WHERE
		ID IN <foreach collection="list" item="item" open="(" separator="," close=")">#{item}</foreach>
	</update>


</mapper>
